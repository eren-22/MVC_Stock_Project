@model MvcStok.Models.Entity.TBLURUNLER
@{ 
    ViewBag.Title = "UrunEkle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form method="post" class="form-group">
    <div>
        <label>Ürün Adı</label>
        <input type="text" class="form-control" name="URUNAD" required=""/>
    </div>
    <div style="margin-top:15px">
        <label>Markası</label>
        <input type="text" class="form-control" name="MARKA" required=""/>
    </div>
    <div style="margin-top:15px">
        <label>Kategori Seçiniz</label>
        @Html.DropDownListFor(m=>m.TBLKATEGORILER.KATEGORIID, (List<SelectListItem>)ViewBag.dgr , new { @class = "form-control"})
    </div>
    <div style="margin-top:15px">
        <label>Fiyatı</label>
        <input type="text" class="form-control" name="FIYAT" required="" maxlength="6"/>
    </div>
    <div style="margin-top:15px">
        <label>Stok Adeti</label>
        <input type="number" class="form-control" name="STOK" required=""/>
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info">Ürün Ekle</button>
    </div>
</form>

